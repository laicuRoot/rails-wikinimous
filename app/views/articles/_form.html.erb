<%= form_for(@article) do |f| %>
  <div class="form-inputs">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-inputs">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-secondary btn-sm' %>
  </div>
<% end %>
